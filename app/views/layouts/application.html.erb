<!DOCTYPE html>
<html>
<head>
  <title><%= yield :head %>Coursera Project</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<header class="navbar navbar-default">
      <div class="container">
        <h4 style="width: 400px;float: left; margin-top: 30px;">
          <%= link_to "Coursera Project", courses_path, id: "logo" %>
        </h4>
        <nav>
          <ul class="nav navbar-nav navbar-right " style="margin-top: 10px;">
            <li>
            	<% if current_user %>
            		<center>
                <%= image_tag current_user.profile_picture.url if current_user.profile_picture? %>
                </center>
                <h5>Hello, <%= current_user.name %></h5> 
            </li>
            <li><h4>
                <%= link_to "Log out", destroy_user_session_path, method: :delete %>
            <% else %>
					     <%= link_to "Log in", new_user_session_path %>
				    <%  end  %></h4>
            </li>
            <li><% link_to "Home",   '#' %></li>
            <li><% link_to "Help",   '#' %></li>
            
          </ul>
        </nav>
      </div>
    </header>
    <section>
    	 <div class="container">
    	       	<%= yield %>
    	 </div>
    </section>
</body>
</html>
